# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.local/share/mail/msmtp.log

# cole@young.sh
account cole@young.sh
host mail.young.sh
port 465
tls_starttls   off
from Cole Young <cole@young.sh>
user cole@young.sh
passwordeval pass show young.sh/cole

# cole@littleloaf.co
account cole@littleloaf.co
host mail.young.sh
port 465
tls_starttls   off
from Cole Young <cole@littleloaf.co>
user cole@littleloaf.co
passwordeval pass show littleloaf.co/cole
